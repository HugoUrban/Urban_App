<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="castaneda.com.webserviceintegration.appMenu"
    android:background="@drawable/o614dt0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola ?, Bienvenido a Urban App"
        android:id="@+id/textViewUrban"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta Tampico-Pedrera"
        android:id="@+id/btnMapa"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textViewUrban"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btnSalir"
        android:layout_below="@+id/btnMapa"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logourb"
        android:layout_marginTop="68dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/btnSalir"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
